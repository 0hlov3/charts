{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Update Docker images in Helm values.yaml and Chart.yaml",
  "extends": [
    "local>renovatebot/.github"
  ],
  "assignees": ["0hlov3"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract appVersion from Chart.yaml for Docker image",
      "fileMatch": ["^charts/.*/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s*'?(?<currentValue>[^']+)'?"
      ],
      "depNameTemplate": "{{parentDir}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Extract first Docker image from values.yaml",
      "fileMatch": ["^charts/.*/values\\.yaml$"],
      "matchStrings": [
        "image:\\s*\\n\\s*registry:\\s*['\"]?(?<registry>[^'\"]*)['\"]?\\s*\\n\\s*repository:\\s*['\"]?(?<depName>[^'\"]+)['\"]?"
      ],
      "currentValueTemplate": "{{ lookup 'Chart.yaml' 'appVersion' }}",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Use semantic commits for Docker updates",
      "matchManagers": ["regex", "custom"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "automerge": false
    }
  ]
}

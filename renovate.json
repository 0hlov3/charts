{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Update Docker images in Helm values.yaml and Chart.yaml",
  "assignees": [
    "0hlov3"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Sync image tag from Chart.yaml appVersion to values.yaml tag using registry/repository for Docker lookup",
      "fileMatch": [
        "^charts/[^/]+/Chart\\.yaml$",
        "^charts/[^/]+/values\\.yaml$"
      ],
      "matchStrings": [
        "appVersion:\\s*['\"]?(?<currentValue>[^'\"]+)['\"]?",
        "registry:\\s*['\"]?(?<registry>[^'\"]+)['\"]?\\s+repository:\\s*['\"]?(?<depName>[^'\"]+)['\"]?[\\s\\S]*?tag:\\s*['\"]?(?<currentValue>[^'\"]*)['\"]?"
      ],
      "depNameTemplate": "{{registry}}/{{depName}}",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Use semantic commits for Docker updates",
      "matchManagers": ["custom.regex"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "automerge": false
    }
  ]
}
